{
  "rules": {
    ".read": false,
    ".write": false,
    "users": {
      ".read": true,
      "$user": {
        ".write": "$user === auth.uid",
        ".validate": "newData.isString() && newData.val().length < 32"
      }
    },
    "sessions": {
      ".read": true,
      "$session": {
        ".write": "$session === auth.uid"
      }
    }
  }
}
